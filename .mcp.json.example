{
  "mcpServers": {
    "mongo": {
      "command": "node",
      "args": ["mongo-server.js"],
      "cwd": "/home/runner/workspace",
      "env": {
        "MONGO_URI": "SUA_MONGO_URI_AQUI",
        "NODE_ENV": "production"
      }
    },
    "perplexity": {
      "command": "npx",
      "args": ["-y", "@perplexity-ai/mcp-server"],
      "env": {
        "PERPLEXITY_API_KEY": "SUA_PERPLEXITY_KEY_AQUI"
      }
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"],
      "env": {
        "NODE_ENV": "production"
      }
    },
    "figma": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-figma"],
      "env": {
        "FIGMA_ACCESS_TOKEN": "SEU_FIGMA_TOKEN_AQUI"
      }
    },
    "stitch": {
      "command": "npx",
      "args": ["-y", "@_davideast/stitch-mcp", "proxy"],
      "env": {
        "STITCH_API_KEY": "SUA_GOOGLE_AI_KEY_AQUI"
      }
    }
  }
}
