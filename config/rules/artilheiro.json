      { "timeId": 49149388, "nome": "Junior Brasilino", "clubeId": 262 },
      { "timeId": 50180257, "nome": "Hivisson", "clubeId": 267 }
    ]
  },

  "ui": {
    "icone": "sports_soccer",
    "cor_tema": "#f59e0b",
    "descricao_participante": "Ranking de Gols"
  },

  "metadados": {
    "criado_em": "2025-12-14",
