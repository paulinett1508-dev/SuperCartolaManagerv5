            </div>
            <div class="participantes-grid" id="participantesGrid">
                ${participantes
                    .map(
                        (p) => `
                    <div class="participante-card-wrapper">
                        <button onclick="window.selecionarParticipante('${p.time_id || p.id}')"
                                class="participante-card"
