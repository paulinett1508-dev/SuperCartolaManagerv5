{
  "mcpServers": {
    "mongo": {
      "command": "node",
      "args": ["mongo-server.js"],
      "cwd": "/home/runner/workspace"
    },
    "perplexity": {
      "command": "npx",
      "args": ["-y", "@perplexity-ai/mcp-server"],
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
      }
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"],
      "env": {
        "NODE_ENV": "production"
      }
    }
  }
}
